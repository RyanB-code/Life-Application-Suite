{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/include/DearImGUI/*.cpp",       // Build files in DearImGUI diectory
                "${workspaceFolder}/src/Modules/*.cpp",             // Build files in Modules directory
                "${workspaceFolder}/src/*.cpp",                     // Build all cpp files in the current workspace folder
                "${workspaceFolder}/src/glad.c",                    // Just build glad.c

                "-I${workspaceFolder}/include",                     // Specifies include folder for g++
		        "-L${workspaceFolder}/lib",                         // Specifies include lib path for g++
                "-o",
                "${workspaceFolder}\\Life-Application-Suite.exe",
                "-std=c++20",                                       // Tells g++ to use C++20
                "-lglfw3dll",                                       // Tells g++ to use this library for compilation
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}